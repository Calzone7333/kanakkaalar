<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvDealName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deal Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1E293B"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvDealAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹10000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#10B981"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvDealCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="customer@example.com"
            android:textSize="14sp"
            android:textColor="#64748B"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvDealStage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stage"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#1A7F7D"
                android:background="@drawable/bg_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"/>
            
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvDealProbability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textSize="12sp"
                android:textColor="#64748B"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
