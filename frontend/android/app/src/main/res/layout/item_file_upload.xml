<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#FFFFFF"
    app:strokeWidth="1dp"
    app:strokeColor="#E5E7EB">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- File Icon -->
        <ImageView
            android:id="@+id/imgFileIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_menu_agenda"
            app:tint="#6B7280"
            android:background="@drawable/bg_icon_circle"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- File Name -->
        <TextView
            android:id="@+id/tvFileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Company_budget.xls"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/imgFileIcon"
            app:layout_constraintTop_toTopOf="@id/imgFileIcon"
            app:layout_constraintEnd_toStartOf="@id/barrierStatus"/>

        <!-- Meta Data -->
        <TextView
            android:id="@+id/tvFileMeta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date: 2023-10-27  Size: 20 MB"
            android:textSize="12sp"
            android:textColor="#9CA3AF"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@id/tvFileName"
            app:layout_constraintTop_toBottomOf="@id/tvFileName"
            app:layout_constraintEnd_toStartOf="@id/barrierStatus"/>

        <!-- Barrier to separate content from status area -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="layoutActions,tvUploading"/>

        <!-- UPLOADING STATE -->
        <TextView
            android:id="@+id/tvUploading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uploading..."
            android:textSize="12sp"
            android:textColor="#10B981"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tvFileMeta"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="12dp"
            android:progressDrawable="@drawable/progress_bar_green"
            android:progress="50"
            android:max="100"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/tvFileName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFileMeta"/>

        <!-- ACTIONS (Download / Delete) -->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageButton
                android:id="@+id/btnDownload"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_menu_download" 
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#4F46E5"
                android:contentDescription="Download"
                android:padding="8dp"/>

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#EF4444"
                android:contentDescription="Delete"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- COMPLETED STATE (Restored for compatibility) -->
        <LinearLayout
            android:id="@+id/layoutCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/imgCheckmark"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_check_circle"
                app:tint="#10B981"/>

            <TextView
                android:id="@+id/tvCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:textSize="11sp"
                android:textColor="#10B981"
                android:textStyle="bold"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
