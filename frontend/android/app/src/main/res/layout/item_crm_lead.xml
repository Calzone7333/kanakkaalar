<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="@drawable/bg_white_rounded_stroke"
    android:layout_marginBottom="8dp">

    <View
        android:layout_width="4dp"
        android:layout_height="40dp"
        android:background="#F97316"
        android:layout_marginRight="12dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvLeadName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lead Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1E293B"/>
        <TextView
            android:id="@+id/tvLeadService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Requirement"
            android:textSize="12sp"
            android:textColor="#64748B"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvLeadStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New"
        android:textSize="12sp"
        android:textColor="#F97316"
        android:background="#FFF7ED"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"/>

</LinearLayout>
