<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CRM Overview"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pipeline, Leads &amp; Performance"
                    android:textSize="14sp"
                    android:textColor="#64748B"/>
            </LinearLayout>
            <!-- Date Filter (Mock) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_rounded_stroke"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Month"
                    android:textSize="12sp"
                    android:textColor="#4B5563"
                    android:layout_marginRight="4dp"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_back"
                    android:rotation="-90"
                    app:tint="#9CA3AF"/>
            </LinearLayout>
        </LinearLayout>

        <!-- KPI STATS -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- 1. Total Leads -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/bg_white_rounded_stroke">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_users_group"
                            app:tint="@android:color/white"
                            android:background="@drawable/bg_circle_orange"
                            android:padding="10dp"/>
                        <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="0dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+5%"
                            android:textSize="10sp"
                            android:textColor="#10B981"
                            android:background="#ECFDF5"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvTotalLeads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B"
                        android:layout_marginTop="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Leads"
                        android:textSize="12sp"
                        android:textColor="#64748B"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 2. Active Deals -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/bg_white_rounded_stroke">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_diamond"
                            app:tint="@android:color/white"
                            android:background="@drawable/bg_circle_blue"
                            android:padding="10dp"/>
                        <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="0dp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvActiveDeals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B"
                        android:layout_marginTop="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Deals"
                        android:textSize="12sp"
                        android:textColor="#64748B"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 3. Pipeline Value -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/bg_white_rounded_stroke">
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_money"
                            app:tint="@android:color/white"
                            android:background="@drawable/bg_circle_purple"
                            android:padding="10dp"/>
                        <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="0dp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvPipelineValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B"
                        android:layout_marginTop="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pipeline Value"
                        android:textSize="12sp"
                        android:textColor="#64748B"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 4. Conversion Rate -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/bg_white_rounded_stroke">
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_analytics"
                            app:tint="@android:color/white"
                            android:background="@drawable/bg_circle_green"
                            android:padding="10dp"/>
                         <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="0dp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvConversionRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B"
                        android:layout_marginTop="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Conversion Rate"
                        android:textSize="12sp"
                        android:textColor="#64748B"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- PIPELINE CHART -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deal Stage Distribution"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:layout_marginBottom="4dp"/>
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Count of deals in each pipeline stage"
                    android:textSize="12sp"
                    android:textColor="#9CA3AF"
                    android:layout_marginBottom="20dp"/>

                <!-- Reusing BarCharView but we will need to adapt data -->
                <com.bizzfilling.app.components.BarChartView
                    android:id="@+id/chartDealStages"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- RECENT LEADS LIST (Visual) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Recent Leads"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"/>
                <TextView
                    android:id="@+id/btnViewAllLeads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textSize="13sp"
                    android:textColor="#3B82F6"
                    android:padding="8dp"/>
            </LinearLayout>
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecentLeads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>
        
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
