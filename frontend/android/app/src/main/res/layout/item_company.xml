<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/bg_white_rounded_stroke"
    android:layout_marginBottom="8dp">

    <!-- Header: Icon + Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_building"
            android:padding="6dp"
            android:background="@drawable/bg_pill_white_20"
            android:backgroundTint="#EFF6FF"
            android:tint="#2563EB"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">
            
            <TextView
                android:id="@+id/tvBusinessName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tech Solutions Inc."
                android:textStyle="bold"
                android:textColor="#111827"
                android:textSize="14sp"/>
            
            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="john@tech.com"
                android:textSize="12sp"
                android:textColor="#6B7280"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvBusinessType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLC"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:background="@drawable/bg_pill_white_20"
            android:backgroundTint="#F3F4F6"
            android:textColor="#4B5563"/>
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F3F4F6" android:layout_marginBottom="8dp"/>

    <!-- Details Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" text="Incorporated" android:textSize="10sp" android:textColor="#9CA3AF"/>
            <TextView android:id="@+id/tvIncorporationDate" android:layout_width="wrap_content" android:layout_height="wrap_content" text="2023-01-01" android:textSize="12sp" android:textColor="#374151" android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" text="PAN" android:textSize="10sp" android:textColor="#9CA3AF"/>
            <TextView android:id="@+id/tvPan" android:layout_width="wrap_content" android:layout_height="wrap_content" text="ABCDE1234F" android:textSize="12sp" android:textColor="#374151" android:textStyle="bold"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">
             <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" text="GST" android:textSize="10sp" android:textColor="#9CA3AF"/>
            <TextView android:id="@+id/tvGst" android:layout_width="wrap_content" android:layout_height="wrap_content" text="29ABCDE1234F1Z5" android:textSize="12sp" android:textColor="#374151" android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
