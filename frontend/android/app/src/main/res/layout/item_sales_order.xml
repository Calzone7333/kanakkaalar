<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_white_rounded_stroke"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/tvClientEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="client@email.com"
            android:textStyle="bold"
            android:textColor="#111827"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"/>
            
        <TextView
            android:id="@+id/tvOrderService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Name"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvOrderAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="â‚¹10,000"
        android:textStyle="bold"
        android:textColor="#111827"
        android:textSize="14sp"
        android:gravity="end"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/tvOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPLETED"
        android:textSize="10sp"
        android:textStyle="bold"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:background="@drawable/bg_pill_white_20"
        android:backgroundTint="#ECFDF5"
        android:textColor="#059669"/>

</LinearLayout>
