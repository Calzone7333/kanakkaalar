<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <TextView
            android:id="@+id/orderTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digital Signature"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#111827"/>

        <TextView
            android:id="@+id/orderDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resuming Application"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:layout_marginTop="4dp"/>

        <!-- Step Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">
            
            <!-- Step 1 -->
            <ImageView
                android:id="@+id/step1Icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu_upload"
                app:tint="#2563EB"/>
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#E5E7EB"
                android:layout_marginHorizontal="8dp"/>
            
            <!-- Step 2 -->
            <ImageView
                android:id="@+id/step2Icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_document"
                app:tint="#D1D5DB"/>
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#E5E7EB"
                android:layout_marginHorizontal="8dp"/>

            <!-- Step 3 -->
            <ImageView
                android:id="@+id/step3Icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu_send"
                app:tint="#D1D5DB"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/stepContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">
            
            <!-- Dynamic Step Content -->
            <TextView
                android:id="@+id/stepTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Documents"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/stepDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please upload the required documents below."
                android:textSize="14sp"
                android:textColor="#4B5563"
                android:layout_marginBottom="24dp"/>

            <!-- Upload Area -->
            <LinearLayout
                android:id="@+id/layoutUploadZone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:background="@drawable/bg_upload_dashed"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_menu_upload"
                    app:tint="#10B981"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drag and Drop or\nBrowse to Upload"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supported formats: PDF, JPG, PNG"
                    android:textSize="14sp"
                    android:textColor="#6B7280"/>
                    
                <!-- Button removed -->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFileList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Step"
        android:backgroundTint="#2563EB"
        android:textColor="#FFFFFF"
        android:layout_margin="24dp"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

</LinearLayout>
