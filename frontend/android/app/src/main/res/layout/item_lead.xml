<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#FFFFFF"
    app:strokeWidth="1dp"
    app:strokeColor="#E5E7EB"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person"
                app:tint="#6B7280"
                android:padding="8dp"
                android:background="@drawable/bg_circle_gray_light"
                android:layout_marginRight="12dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLeadName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lead Name"
                    android:textStyle="bold"
                    android:textColor="#111827"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvLeadService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Interest"
                    android:textColor="#6B7280"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvLeadStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_pill_white_20"
                android:backgroundTint="#EFF6FF"
                android:textColor="#2563EB"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F3F4F6"
            android:layout_marginVertical="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_phone"
                app:tint="#4B5563"
                android:layout_marginRight="4dp"/>
             <TextView
                android:id="@+id/tvLeadPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+91 XXXXX XXXXX"
                android:textColor="#4B5563"
                android:textSize="12sp"/>

             <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_email"
                app:tint="#4B5563"
                android:layout_marginRight="4dp"/>
             <TextView
                android:id="@+id/tvLeadEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@example.com"
                android:textColor="#4B5563"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
