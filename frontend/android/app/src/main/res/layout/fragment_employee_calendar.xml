<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Image Section (Web App Design) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/ivHero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#111827"
                android:src="@drawable/hero_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66000000" /> <!-- Overlay -->

            <!-- Header Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:text="My Company"
                android:textColor="#F2994A"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:textAllCaps="true"/>

            <!-- Contact Info Overlay -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="CONTACT US:"
                    android:textColor="#F2994A"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">
                     <!-- Icon or just text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+123 456 789"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:alpha="0.9"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="calendar@gmail.com"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:alpha="0.9"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Month Navigation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnPrevMonth"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/circle_white_border"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="#4B5563"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <ImageView
                    android:id="@+id/btnNextMonth"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/circle_white_border"
                    android:rotation="180"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="#4B5563"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/tvMonthName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="JANUARY"
                    android:textColor="#F2994A"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:textAllCaps="true"/>
            </LinearLayout>

            <!-- Calendar Container (Gray Box) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_rounded_square_light_red"
                android:backgroundTint="#F9FAFB"
                android:padding="16dp">

                <!-- Calendar Grid Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:weightSum="7">
                    
                    <TextView android:text="S" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#F2994A"/>
                    <TextView android:text="M" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#9CA3AF"/>
                    <TextView android:text="T" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#9CA3AF"/>
                    <TextView android:text="W" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#9CA3AF"/>
                    <TextView android:text="T" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#9CA3AF"/>
                    <TextView android:text="F" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#9CA3AF"/>
                    <TextView android:text="S" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#F2994A"/>
                </LinearLayout>

                 <!-- Calendar Grid -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCalendarGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never" />

                <!-- Bottom Panel (Selected Date) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E7EB"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">
                        
                        <TextView
                            android:id="@+id/tvSelectedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monday, 1"
                            android:textAllCaps="true"
                            android:textColor="#9CA3AF"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                        
                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        
                        <TextView
                            android:id="@+id/tvEventCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_pill_white_20"
                            android:backgroundTint="#FFF7ED"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:text="0 Events"
                            android:textColor="#F2994A"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Events List -->
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvEmpty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No events scheduled for this day"
                        android:textColor="#D1D5DB"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:layout_gravity="center"
                        android:padding="12dp"
                        android:visibility="gone"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvEvents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
