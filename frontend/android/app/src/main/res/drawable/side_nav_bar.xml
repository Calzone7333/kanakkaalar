<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Professional Deep Teal Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A7F7D"
                android:centerColor="#166D6B"
                android:endColor="#0F4C4B"
                android:angle="135"/>
        </shape>
    </item>
    
    <!-- Decorative geometric overlay -->
    <item android:top="-120dp" android:right="-80dp">
        <shape android:shape="oval">
            <solid android:color="#15FFFFFF"/>
            <size android:width="300dp" android:height="300dp"/>
        </shape>
    </item>
    
    <item android:bottom="-150dp" android:left="-50dp">
        <shape android:shape="oval">
            <solid android:color="#0DFFFFFF"/>
            <size android:width="400dp" android:height="400dp"/>
        </shape>
    </item>
</layer-list>
